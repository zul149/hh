<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvVerificationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправили код на example@mail.ru"
            android:fontFamily="@font/fonts"
            android:textSize="20sp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Напишите его, чтобы подтвердить, что это вы, а не кто-то другой входит в личный кабинет"
            android:textSize="16sp"
            android:fontFamily="@font/fonts"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="16dp">

            <EditText
                android:id="@+id/etCode1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edit_text"
                android:textColor="@color/white"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/textHint"
                android:hint="*"
                android:textSize="24sp"
                android:maxLength="1"
                android:padding="0dp"
                android:layout_margin="4dp"/>

            <EditText
                android:id="@+id/etCode2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edit_text"
                android:textColor="@color/white"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/textHint"
                android:hint="*"
                android:textSize="24sp"
                android:maxLength="1"
                android:padding="0dp"
                android:layout_margin="4dp"/>

            <EditText
                android:id="@+id/etCode3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edit_text"
                android:textColor="@color/white"
                android:inputType="number"
                android:textColorHint="@color/textHint"
                android:hint="*"
                android:gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:padding="0dp"
                android:layout_margin="4dp"/>

            <EditText
                android:id="@+id/etCode4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edit_text"
                android:textColor="@color/white"
                android:inputType="number"
                android:textColorHint="@color/textHint"
                android:hint="*"
                android:gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:padding="0dp"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердить"
            android:fontFamily="@font/fonts"
            android:backgroundTint="@color/ButtonInactive"
            android:textColor="@color/white"
            android:enabled="false"
            android:padding="16dp"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>